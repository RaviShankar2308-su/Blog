<h1>New Post</h1>

<%= form_with(model: @post, url: posts_path) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, required: true %>

  <%= form.label :content %>
  <%= form.text_area :content, required: true %>

  <%= form.submit 'Create Post' %>
<% end %>

<%= button_to 'Back to Posts', posts_path %>
